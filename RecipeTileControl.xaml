<UserControl x:Class="ProjectD2.RecipeTileControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectD2"
             mc:Ignorable="d" 
             d:DesignHeight="135" d:DesignWidth="190">
    <Grid>
        <Grid x:Name="Background_Grid" HorizontalAlignment="Left" Height="135" VerticalAlignment="Top" Width="185" Background="#FF49AEF0" Margin="2.75,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="13*"/>
                <RowDefinition Height="4*"/>
            </Grid.RowDefinitions>
            <Image x:Name="Recipe_Image" HorizontalAlignment="Left" Height="124.5" VerticalAlignment="Top" Width="175" Margin="5,5.5,0,0" Grid.RowSpan="2" Stretch="UniformToFill" Source="pasta.jpg"/>
            <TextBlock x:Name="Recipe_Name" HorizontalAlignment="Left" Height="16.765" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="175" TextAlignment="Center" Margin="5,10,0,0" Foreground="White" Text="Recipe" Background="#FF1D1D1D"/>
        </Grid>

    </Grid>
</UserControl>
