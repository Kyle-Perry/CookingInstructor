        </EventTrigger>
        <EventTrigger RoutedEvent="UIElement.MouseLeave" SourceName="Favorites_Button_Copy">
            <BeginStoryboard x:Name="Favourite_to_White_BeginStoryboard" Storyboard="{StaticResource Favourite_to_White}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="UIElement.MouseEnter" SourceName="AddRecipe_Button_Copy">
            <BeginStoryboard x:Name="AddRecipetoWhite_BeginStoryboard" Storyboard="{StaticResource AddRecipetoWhite}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="UIElement.MouseLeave" SourceName="AddRecipe_Button_Copy">
            <BeginStoryboard x:Name="AddRecipetoBlue_BeginStoryboard" Storyboard="{StaticResource AddRecipetoBlue}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="UIElement.MouseEnter" SourceName="Random_Button_Copy">
            <BeginStoryboard x:Name="RandomtoWhite_BeginStoryboard" Storyboard="{StaticResource RandomtoWhite}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="UIElement.MouseLeave" SourceName="Random_Button_Copy">
            <BeginStoryboard x:Name="RandomtoBlue_BeginStoryboard" Storyboard="{StaticResource RandomtoBlue}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="UIElement.MouseEnter" SourceName="Recipe_BackButton">
            <BeginStoryboard x:Name="RecipeBacktoWhite_BeginStoryboard" Storyboard="{StaticResource RecipeBacktoWhite}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="UIElement.MouseLeave" SourceName="Recipe_BackButton">
            <BeginStoryboard x:Name="RecipeBacktoBlue_BeginStoryboard" Storyboard="{StaticResource RecipeBacktoBlue}"/>
        </EventTrigger>
